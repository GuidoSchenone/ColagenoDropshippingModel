{% if section.settings.show_faq %}
<div class="bg-white">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h2 class="text-2xl font-bold text-center text-gray-900 mb-6">{{ section.settings.heading }}</h2>
    <div class="space-y-3">
      {% for block in section.blocks %}
        {% if block.type == 'faq' %}
        <div class="border rounded-lg">
          {% render 'accordion-item', question: block.settings.question, answer: block.settings.answer %}
        </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
{% endif %}
{% schema %}
{
"name": "Product FAQ",
"settings": [
{ "type": "checkbox", "id": "show_faq", "label": "Show FAQ section", "default": true },
{ "type": "text", "id": "heading", "label": "Heading", "default": "Frequently Asked Questions" },
{ "type": "color", "id": "bg_color", "label": "Background Color", "default": "#ffffff" },
{ "type": "checkbox", "id": "close_others", "label": "Close other items when opening new one", "default": false }
],
"blocks": [
{
"type": "faq",
"name": "FAQ Item",
"settings": [
{ "type": "text", "id": "question", "label": "Question", "default": "How long does shipping take?" },
{ "type": "richtext", "id": "answer", "label": "Answer", "default": "<p>" }
]
}
],
"presets": [{"name": "Product FAQ"}]
}
{% endschema %>
