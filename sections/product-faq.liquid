{% if section.settings.show_faq %}<div class="bg-white"><div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12"><h2 class="text-2xl font-bold text-center text-gray-900 mb-6">
<div class="space-y-3">{% for block in section.blocks %}<div class="border rounded-lg">{% render 'accordion-item', question: block.settings.question, answer: block.settings.answer %}</div>{% endfor %}</div></div></div>{% endif %}
{% schema %}
{"name":"Product FAQ","settings":[{"type":"checkbox","id":"show_faq","label":"Show FAQ section","default":true},{"type":"text","id":"heading","label":"Heading","default":"Preguntas frecuentes"}],"blocks":[{"name":"FAQ Item","type":"faq","settings":[{"type":"text","id":"question","label":"Question"},{"type":"richtext","id":"answer","label":"Answer"}]}]}
{% endschema %}
