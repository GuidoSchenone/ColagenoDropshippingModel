{% if section.settings.enable %}
<div class="bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h2 class="text-2xl font-bold text-center text-gray-900 mb-8">{{ section.settings.heading }}</h2>
Copy
{% if section.settings.layout == 'grid' %}
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  {% for block in section.blocks %}
    {% if block.type == 'testimonial' %}
    <div class="bg-gray-50 rounded-xl p-6 shadow">
      <div class="flex items-center mb-4">
        {% if block.settings.customer_photo != blank %}
        <img src="{{ block.settings.customer_photo | img_url: '100x100' }}" alt="Customer photo" class="w-12 h-12 rounded-full mr-3">
        {% endif %}
        <div>
          <p class="font-semibold text-gray-900">{{ block.settings.customer_name }}</p>
          <p class="text-sm text-gray-600">{{ block.settings.location }}</p>
        </div>
      </div>
      <p class="text-gray-700">{{ block.settings.testimonial }}</p>
    </div>
    {% endif %}
  {% endfor %}
</div>
{% endif %}

{% if section.settings.layout == 'carousel' %}
<div class="swiper-container">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      {% if block.type == 'testimonial' %}
      <div class="swiper-slide">
        <div class="bg-gray-50 rounded-xl p-6 shadow">
          <div class="flex items-center mb-4">
            {% if block.settings.customer_photo != blank %}
            <img src="{{ block.settings.customer_photo | img_url: '100x100' }}" alt="Customer photo" class="w-12 h-12 rounded-full mr-3">
            {% endif %}
            <div>
              <p class="font-semibold text-gray-900">{{ block.settings.customer_name }}</p>
              <p class="text-sm text-gray-600">{{ block.settings.location }}</p>
            </div>
          </div>
          <p class="text-gray-700">{{ block.settings.testimonial }}</p>
        </div>
      </div>
      {% endif %}
    {% endfor %}
  </div>
  <div class="swiper-pagination"></div>
</div>
{% endif %}
  </div>
</div>
{% endif %}
{% schema %}
{
"name": "Product Social Proof",
"settings": [
{ "type": "checkbox", "id": "enable", "label": "Enable section", "default": true },
{ "type": "text", "id": "heading", "label": "Heading", "default": "Real Customer Results" },
{ "type": "select", "id": "layout", "label": "Layout", "options": [{"value": "grid", "label": "Grid"}, {"value": "carousel", "label": "Carousel"}], "default": "grid" },
{ "type": "color", "id": "bg_color", "label": "Background Color", "default": "#ffffff" }
],
"blocks": [
{
"type": "testimonial",
"name": "Customer Testimonial",
"settings": [
{ "type": "image_picker", "id": "customer_photo", "label": "Customer Photo" },
{ "type": "text", "id": "customer_name", "label": "Customer Name", "default": "Happy Customer" },
{ "type": "text", "id": "location", "label": "Location", "default": "Madrid, ES" },
{ "type": "textarea", "id": "testimonial", "label": "Testimonial", "default": "I love this product! It changed my life." }
]
}
],
"presets": [{"name": "Social Proof"}]
}
{% endschema %}
