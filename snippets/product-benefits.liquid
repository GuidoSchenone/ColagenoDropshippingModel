<div class="bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h2 class="text-2xl font-bold text-center text-gray-900 mb-6">{{ section.settings.heading }}</h2>
Copy
{% if section.settings.show_before_after %}
<div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
  <div class="text-center">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Before</h3>
    <img src="{{ section.settings.before_image | file_url }}" alt="Before benefit" class="w-full rounded-xl shadow-lg">
  </div>
  <div class="text-center">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">After</h3>
    <img src="{{ section.settings.after_image | file_url }}" alt="After benefit" class="w-full rounded-xl shadow-lg">
  </div>
</div>
{% endif %}

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
  {% for block in section.blocks %}
    {% if block.type == 'benefit' %}
    <div class="text-center p-4">
      {% if block.settings.icon != blank %}
      <div class="text-4xl mb-3"><img src="{{ block.settings.icon | file_url }}" alt="{{ block.settings.title }}" class="w-12 h-12 mx-auto"></div>
      {% else %}
      <div class="text-4xl mb-3">{% render 'icon-check' %}</div>
      {% endif %}
      <h3 class="font-semibold text-gray-900">{{ block.settings.title }}</h3>
      <p class="text-sm text-gray-600 mt-1">{{ block.settings.desc }}</p>
    </div>
    {% endif %}
    
    {% if block.type == 'mid_section' %}
    <div class="col-span-full my-8">
      <img src="{{ block.settings.image | file_url }}" alt="{{ block.settings.alt }}" class="w-full rounded-xl shadow-lg">
    </div>
    {% endif %}
  {% endfor %}
</div>
  </div>
</div>
{% schema %}
{
"name": "Product Benefits",
"settings": [
{ "type": "text", "id": "heading", "label": "Heading", "default": "Amazing Results" },
{ "type": "checkbox", "id": "show_before_after", "label": "Show before/after images", "default": true },
{ "type": "image_picker", "id": "before_image", "label": "Before Image" },
{ "type": "image_picker", "id": "after_image", "label": "After Image" },
{ "type": "color", "id": "bg_color", "label": "Background Color", "default": "#ffffff" }
],
"blocks": [
{
"type": "benefit",
"name": "Benefit",
"settings": [
{ "type": "text", "id": "title", "label": "Title", "default": "Fast Results" },
{ "type": "textarea", "id": "desc", "label": "Description", "default": "See changes in just 2 weeks" },
{ "type": "image_picker", "id": "icon", "label": "Icon (optional)" }
]
},
{
"type": "mid_section",
"name": "Mid Section Image",
"settings": [
{ "type": "image_picker", "id": "image", "label": "Image" },
{ "type": "text", "id": "alt", "label": "Alt Text", "default": "Product section" }
]
}
],
"presets": [{"name": "Product Benefits"}]
}
{% endschema %}
