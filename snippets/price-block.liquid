<div class="space-y-2"><div class="flex items-center space-x-3"><span class="text-3xl font-bold text-gray-900">{{ product.price | money }}</span>{% if product.compare_at_price > product.price %}<span class="text-xl text-gray-500 line-through">{{ product.compare_at_price | money }}</span><span class="bg-red-100 text-red-800 px-2 py-1 rounded-full text-sm font-medium">-{{ product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price | round }}%</span>{% endif %}</div></div>
